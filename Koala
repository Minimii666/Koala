body {
  margin: 0;
  height: 100vh;
  background: transparent;
  overflow: hidden;
  cursor: none;
}

#koala {
  position: absolute;
  width: 90px;
  pointer-events: auto;
  transition: transform 0.2s ease;
}
const koala = document.getElementById("koala");

let mouseX = 0;
let mouseY = 0;
let koalaX = 100;
let koalaY = 100;

document.addEventListener("mousemove", e => {
  mouseX = e.clientX;
  mouseY = e.clientY;
});

function followMouse() {
  koalaX += (mouseX - koalaX) * 0.1;
  koalaY += (mouseY - koalaY) * 0.1;

  koala.style.left = koalaX + "px";
  koala.style.top  = koalaY + "px";

  requestAnimationFrame(followMouse);
}
followMouse();

